---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import Hr from "@/components/Hr.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index">
    <section id="hero" class="pt-8 pb-6">
      <h1 class="my-4 inline-block text-4xl font-bold sm:my-8 sm:text-5xl">
        Lyme's Code Lab  
      </h1>
      <a
        target="_blank"
        href="/rss.xml"
        class="inline-block text-4xl font-bold sm:my-8 sm:text-5xl"
        aria-label="rss feed"
        title="RSS Feed"
      >
        ðŸ§ª 
        <span class="sr-only">RSS Feed</span>
      </a>

      <p>
        I'm Lyme, a tech enthusiast diving deep into modern C++ and Astro. Here, I share my coding journey, tips, and insights to help you level up your skills too! ðŸŒŸ
      </p>
      <p class="mt-2">
        Fun fact: I'm Maple's tech-loving alter ego! Check out
        <LinkButton
          class="underline decoration-dashed underline-offset-4 hover:text-accent"
          href="https://www.saroprock.com"
        >
          Maple's page
        </LinkButton> to learn more about me.
      </p>
      {
        SOCIALS.length > 0 && (
          <div class="mt-4 flex flex-col sm:flex-row sm:items-center">
            <div class="mr-2 mb-1 whitespace-nowrap sm:mb-0">Connect with me:</div>
            <Socials />
          </div>
        )
      }
    </section>

    <Hr />

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured" class="pt-12 pb-6">
            <h2 class="text-2xl font-semibold tracking-wide">Featured Posts âœ¨</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
              Check out my top picksâ€”posts Iâ€™m especially proud of or think youâ€™ll love! ðŸ’–
            </p>
            <ul>
              {featuredPosts.map(({ data, id }) => (
                <Card
                  href={`/posts/${id}/`}
                  frontmatter={data}
                  secHeading={false}
                />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">Fresh from the Code Lab ðŸ§ª</h2>
          <ul>
            {recentPosts.map(
              ({ data, id }, index) =>
                index < SITE.postPerIndex && (
                  <Card
                    href={`/posts/${id}/`}
                    frontmatter={data}
                    secHeading={false}
                  />
                )
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        Explore All Posts ðŸš€
        <IconArrowRight class="inline-block" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>